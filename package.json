{
  "name": "basenodejs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "mocha ./test/**/*.test.js",
    "istanbul": "nyc mocha",
    "debug": "nodemon --delay 80ms --watch app --watch config --watch ./bin/www --exec 'npm run inspect'",
    "inspect": "kill-port --port 9229 && node --inspect=0.0.0.0:9229 ./bin/www",
    "build:prod": "docker build -f Dockerfile.dev -t dev .",
    "build:dev": "docker build -f Dockerfile.prod -t prod ."
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "connect-redis": "^3.3.3",
    "cookie-parser": "~1.4.3",
    "express": "~4.16.0",
    "express-session": "^1.15.6",
    "hbs": "~4.0.1",
    "http-errors": "~1.6.2",
    "lodash": "^4.17.10",
    "mongoose": "^5.2.6",
    "morgan": "~1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "jsdoc": "^3.5.5",
    "jshint": "^2.9.5",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "sinon": "^5.0.7",
    "supertest": "^3.1.0",
    "nodemon": "^1.18.3",
    "kill-port": "^1.3.1"
  },
  "nyc": {
    "exclude": [
      "app.js"
    ]
  }
}
