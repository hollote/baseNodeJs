{
  "name": "basenodejs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "mocha ./test/**/*.test.js",
    "istanbul": "nyc mocha",
    "debug": "nodemon",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "build:prod": "docker build -f Dockerfile.dev -t dev .",
    "build:dev": "docker build -f Dockerfile.prod -t prod .",
    "tsc": "tsc"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn run lint"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn run lint",
      "git add"
    ]
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "connect-redis": "^3.3.3",
    "cookie-parser": "~1.4.3",
    "express": "~4.16.0",
    "express-session": "^1.15.6",
    "hbs": "~4.0.1",
    "http-errors": "~1.6.2",
    "lodash": "^4.17.10",
    "mongoose": "^5.2.6",
    "morgan": "~1.9.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "winston": "^3.1.0",
    "joi": "^14.3.1",
    "celebrate": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/connect-redis": "^0.0.8",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.1",
    "@types/express-flash": "^0.0.0",
    "@types/express-session": "^1.15.12",
    "@types/lodash": "^4.14.121",
    "@types/mongodb": "^3.1.19",
    "@types/mongoose": "^5.3.18",
    "@types/node": "^11.9.4",
    "@types/passport": "^1.0.0",
    "@types/passport-local": "^1.0.33",
    "@types/winston": "^2.4.4",
    "@types/joi": "^14.3.2",
    "chai": "^4.1.2",
    "jsdoc": "^3.5.5",
    "jshint": "^2.9.5",
    "kill-port": "^1.3.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.3",
    "nyc": "^11.8.0",
    "sinon": "^5.0.7",
    "supertest": "^3.1.0",
    "ts-node": "^8.0.2",
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.3.3",
    "tslint-origin-ordered-imports-rule": "^1.1.2",
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "tslint": "^5.12.1"
  },
  "nyc": {
    "exclude": [
      "app.js"
    ]
  }
}
