{
  "name": "basenodejs",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "test": "mocha ./test/**/*.test.js",
    "istanbul": "nyc mocha",
    "debug": "nodemon --inspect ./bin/www",
    "create_image_prod": "docker build -f Dockerfile -t hollote/auth_app_prod .",
    "create_image_dev": "docker build -f Dockerfile -t hollote/auth_app_dev .",
    "docker_dev": "docker-compose up -d",
    "docker_prod": "docker-compose -f docker-compose.prod.yml up -d",
    "prod": "npm run create_image_prod && npm run docker_prod"
  },
  "dependencies": {
    "bcrypt": "^3.0.0",
    "connect-redis": "^3.3.3",
    "cookie-parser": "~1.4.3",
    "express": "~4.16.0",
    "express-session": "^1.15.6",
    "hbs": "~4.0.1",
    "http-errors": "~1.6.2",
    "lodash": "^4.17.10",
    "mongoose": "^5.2.6",
    "morgan": "~1.9.0",
    "node-sass-middleware": "0.11.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "winston": "^2.4.2"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "jsdoc": "^3.5.5",
    "jshint": "^2.9.5",
    "mocha": "^5.2.0",
    "nyc": "^11.8.0",
    "sinon": "^5.0.7",
    "supertest": "^3.1.0",
    "nodemon": "^1.18.3"
  },
  "nyc": {
    "exclude": [
      "app.js"
    ]
  }
}
